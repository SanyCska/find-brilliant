# Telegram API Credentials
# Obtain from https://my.telegram.org/apps
API_ID=12345678
API_HASH=your_api_hash_here

# Target user to forward matching messages to
# This is the numeric Telegram user ID
# You can get this from @userinfobot on Telegram
TARGET_USER_ID=123456789

# Keywords to filter messages (comma-separated, case-insensitive)
# If ANY keyword matches, the message will be forwarded
KEYWORDS=laptop,macbook,iphone,gaming pc,rtx 4090

# Auto-reply settings
# Enable automatic replies to matched messages
AUTO_REPLY_ENABLED=false

# Text to send as auto-reply
AUTO_REPLY_TEXT=Hi! I'm interested in this. Is it still available?

# Random delay range for auto-reply (in seconds)
# A random value between MIN and MAX will be chosen
AUTO_REPLY_MIN_DELAY=5
AUTO_REPLY_MAX_DELAY=15

# Session file name (optional, defaults to "userbot_session")
SESSION_NAME=userbot_session
