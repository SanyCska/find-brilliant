# Telegram API credentials
# Get these from https://my.telegram.org/apps
API_ID=your_api_id
API_HASH=your_api_hash
PHONE_NUMBER=+1234567890

# Target user to send notifications to
TARGET_USER_ID=your_telegram_user_id

# Bot token for sending notifications
# Get from @BotFather
TG_BOT_KEY=your_bot_token

# Keywords to search for (comma-separated)
KEYWORDS=keyword1,keyword2,keyword3

# Session file name
SESSION_NAME=data/userbot_session

# Polling interval for large groups (in seconds)
POLL_INTERVAL=30

# Database configuration
DB_HOST=postgres          # Use 'postgres' for Docker, 'localhost' for external tools
DB_PORT=5433              # External port (localhost only), internal is always 5432
DB_NAME=find_brilliant
DB_USER=postgres
DB_PASSWORD=your_secure_password

