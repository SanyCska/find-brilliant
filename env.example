# Database configuration
DB_HOST=postgres              # Docker service name (for containers)
DB_PORT=5432                  # Internal Docker port (for application)
DB_EXTERNAL_PORT=5433         # External port (for host machine tools like psql)
DB_NAME=find_brilliant
DB_USER=postgres
DB_PASSWORD=your_secure_password

